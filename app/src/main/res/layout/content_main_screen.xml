<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_extra_module"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tmend.firebaseauth.MainScreen"
    tools:showIn="@layout/activity_main_screen">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <TextView
            android:id = "@+id/textViewCurrentDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Health Details"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <LinearLayout
            android:id="@+id/LayoutDisplayGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:text="Gender:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayGenderLabel"
                android:layout_weight="0.75" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayGender"
                android:layout_weight="0.25" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutDisplayAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:text="Age:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayAgeLabel"
                android:layout_weight="0.75" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayAge"
                android:layout_weight="0.25" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LayoutDisplayWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:text="Weight in kg:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayWeightLabel"
                android:layout_weight="0.75" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayWeight"
                android:layout_weight="0.25" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/LayoutDisplayActivityLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <TextView
            android:text="Activity Level:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDisplayActivityLevelLabel"
            android:layout_weight="0.75"
            android:textSize="14sp" />
        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewDisplayActivityLevel"
            android:layout_weight="0.25" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/LayoutDisplayHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
            <TextView
                android:text="Height:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayHeightLabel"
                android:layout_weight="0.75" />
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisplayHeight"
                android:layout_weight="0.25" />
        </LinearLayout>

        <View
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorPrimary"/>

        <TextView
            android:layout_marginTop="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tips to improve blood sugar control and overall health"
            android:textSize="22sp" />

        <android.support.v7.widget.CardView
            android:layout_marginTop="20sp"
            android:layout_width="350sp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="A Diabetic should try and avoid:"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:textSize="18sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n 1.Candy \n 2.White bread \n 3.White rice \n 4.Pasta \n 5.Raisins \n 6.French fries \n 7.Fruit juices \n 8.Soft drinks \n 9.Full fat milk \n 10.Cakes and pastries \n"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center_horizontal"
                android:textSize="14sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="20sp"
            android:layout_width="350sp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="A Diabetic should try and have:"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="\n 1.Spinach \n 2.Beans \n 3.Tomatoes \n 4.Broccoli \n 5.Apples \n 6.Oranges \n 7.Brown rice \n 8.Sweet potatoes \n 9.Cranberries \n 10.Cucumbers \n"
                    android:gravity="center_horizontal"
                    android:textSize="14sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>

